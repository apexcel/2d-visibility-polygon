{
    "parser": "@babel/eslint-parser",
    "env": {
        "browser": true,
        "es2021": true
    },
    "extends": "eslint:recommended",
    "parserOptions": {
        "ecmaVersion": 12,
        "sourceType": "module",
    },
    "rules": {
        "quotes": ["warn", "single"],
        "curly": ["error", "all"],
        "eqeqeq": ["error", "smart"],
        "no-console": "warn",
        "quote-props": ["error", "as-needed"],
        "camelcase": ["error", {"properties" : "always"}],
        "brace-style": ["error", "stroustrup", { "allowSingleLine": true }],
        "arrow-parens": ["warn" ,"as-needed"]
    }
}
